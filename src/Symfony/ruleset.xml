<?xml version="1.0"?><!---->
<ruleset name="Symfony">
<description>The Symfony2 coding standard</description>

<exclude-pattern>*/Resources/*</exclude-pattern>

<!-- Include the whole PSR-2 standard which include PSR-1 -->
<rule ref="PSR2" />

<rule ref="Squiz.Strings.ConcatenationSpacing" /><!--Makes sure there are no spaces between the concatenation operator (.) and the strings being concatenated. -->
<rule ref="Squiz.Commenting.ClassComment" /><!-- -->

<rule ref="PEAR.Commenting.FunctionComment.Missing">
    
</rule>

<rule ref="PEAR.Commenting.FunctionComment.MissingParamComment">
    <severity>0</severity>
</rule>
<rule ref="PEAR.Commenting.FunctionComment.SpacingAfterParamType">
    <severity>0</severity>
</rule>
<rule ref="PEAR.Commenting.FunctionComment.SpacingAfterParamName">
    <severity>0</severity>
</rule>
<rule ref="PEAR.Commenting.FunctionComment.MissingReturn">
    <severity>0</severity>
</rule>


</ruleset>
